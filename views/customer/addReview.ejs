<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      .review {
        padding: 3%;
        margin: 5%;
        border: 1px solid #000;
        border-radius: 10%;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
        <form class="review" action="/addReview/<%= product.productID %>" enctype="multipart/form-data" method="post">
            <h1 style="text-align: center; font-weight: bold;">
                Add Review For <%=product.name%>
            </h1>
            <br>
            <h4 style="text-align: center; font-weight: lighter;">
                Size: <%= product.size %> Color: <%= product.colorName %>
            </h4>
            <br>

            <input type="hidden" name="productID" value="<%= product.productID%>">
            <input type="hidden" name="variantID" value="<%= product.productVariantID %>">

            <!-- Image Upload -->
              <div class="mb-3">
                <label for="image">Review Image:</label>
                <input type="file" id="image" name="image" accept="image/*" class="form-control">
              </div> 
        
              <div class="mb-3">
                <label for="rate">Product Rating:</label>
                <div id="stars">‚≠ê‚≠ê‚≠ê</div> <!-- Default stars -->
                <input type="range" max="5" step="0.5" id="rate" name="rate" required class="form-control" oninput="updateStars(this.value)">
                
            </div>
            
            <script>
                function updateStars(value) {
                    let fullStars = "‚≠ê".repeat(Math.floor(value)); 
                    let halfStar = (value % 1 !== 0) ? "üåó" : ""; 
            
                    document.getElementById("stars").innerHTML = fullStars + halfStar;
                }
            </script>
            
        
            <!-- Describe -->
            <div class="mb-3">
                <label for="description">Review:</label>
                <textarea id="description" name="description" required class="form-control" rows="4">Type your comment here</textarea>
            </div>

        
            <!-- Submit Button -->
            <div class="text-center">
            <button type="submit" class="btn btn-outline-secondary">Review It</button>
            </div>
        </form>
        
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
