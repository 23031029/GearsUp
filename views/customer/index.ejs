<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HomePage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      .banner-container {
        position: relative;
        width: 100%;
        height: 300px; 
        overflow: hidden;
      }
      .banner-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; 
      }
      .banner-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: black;
        background-color: white;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
      }
      .nav-link {
        color: #a39081 !important;
        margin-right: 50px;
        padding-right: 50%;
      }
      
      .nav-link:hover {
        color: #986c4a !important; 
      }

      .view {
        position: fixed;
        bottom: 20px;
        right: 20px;
      }

      .card {
        display: flex;
        flex-direction: column;
        height: 100%;
        border: 1px solid #00000020;
        border-radius: 8px;
        margin-top: 20%;
      }

      .card:hover {
        transform: translateY(-5px);
      }

      .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
      }

      .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        }

      .card-body a{
        background-color: #b89d88 !important;
        color: #986c4a !important;
        border: 0px;
      }
      .card-body a:hover{
        color: #a39081 !important;
        background-color: #986c4a !important;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
      <div class="banner-container">
        <img src="/images/<%= company[0].statementPicture %>" alt="Company Image">
        <div class="banner-text"><%= company[0].statement %></div>

      </div>

           <!-- Sub Links to get "Latest, Discounts, Limited Edition" -->
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/futureUpdate"><i><b>LATEST</b></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/futureUpdate"><i><b>DISCOUNTS</b></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/futureUpdate"><i><b>LIMITED EDTIONS</b></i></a>
        </li>
      </ul>


      <!-- Show all product -->
      <div class="container mt-4">
        <div class="row g-4">
          <% for(let i=0; i<product.length; i++){%>
          <!-- Card 1 -->
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card">
              <img src="/images/<%= product[i].image %>" class="card-img-top" alt="<%= product[i].image %>">
              <div class="card-body">
                <h5 class="card-title"><%= product[i].name %></h5>
                <p class="card-text">Price: $<%= product[i].price %></p>
                <a href="/productID/<%=product[i].productID%>" class="btn btn-primary">View Product</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>


      
      
      
      
      
    


    </main>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
