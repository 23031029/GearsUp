<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
       .registration {
        padding: 20px;
        width: 700px; 
        box-shadow: #64646f33 0px 7px 29px 0px;
        border-radius: 10px;
        background-color: #fff;
      }
      
      .registration h1 {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
        color: #986c4a;
      }
      .registration label {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
      }
      .registration input, .registration select {
        margin-bottom: 15px;
        border-radius: 10px;
        width: 100%;
        height: 50px;
        font-size: 1rem;
        padding: 10px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      }
      .registration input:focus, .registration select:focus {
        border-color: #986c4a;
        box-shadow: 0 0 8px rgba(152, 108, 74, 0.4);
        outline: none;
      }
      .registration button {
        width: 100%;
        height: 50px;
        font-size: 1.1rem;
        background-color: #ddd6d0;
        color: #986c4a;
        border: 0;
        font-weight: bold;
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
      }
      .btn-primary:hover {
        color: #ddd6d0 !important;
        background-color: #986c4a;
      }
      body {
        margin-top: 5%;
        background-color: #f9f9f9;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .alert {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <div class="full-height">
      <div class="registration">
        <h1>Register</h1>

        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-danger">
            <%= messages %>
          </div>
        <% } %>

        <% if (successMessage && successMessage.length > 0) { %>
          <div class="alert alert-success">
            <%= successMessage %>
          </div>
        <% } %>

          <!-- Registration Form -->
          <form action="/register" method="post" enctype="multipart/form-data">
            <!-- Username -->
            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required
                <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } %> />
            </div>
          
            <!-- Full Name -->
            <div class="form-group">
              <label for="fullName">Full Name</label>
              <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Enter your full name" required
                <% if (formData && formData.fullName) { %> value="<%= formData.fullName %>" <% } %> />
            </div>
          
            <!-- Email -->
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required
                <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } %> />
            </div>
          
            <!-- Phone Number -->
            <div class="form-group">
              <label for="phoneNumber">Phone Number</label>
              <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" maxlength="11" placeholder="Enter your phone number" required
                <% if (formData && formData.phoneNumber) { %> value="<%= formData.phoneNumber %>" <% } %> />
            </div>
          
            <!-- Profile Picture -->
            <div class="form-group">
              <label for="image">Profile Picture (Optional)</label>
              <input type="file" id="image" name="image" class="form-control" accept="image/*" />
            </div>
          
            <!-- Password -->
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>
            <!-- Confirm Password -->
            <div class="form-group">
              <label for="password">Confirm Password:</label>
              <input type="password" placeholder="Confirm Password" id="confirm_password" required>            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary mt-3">Register</button>
          
            <!-- Login Link -->
            <p class="mt-3 text-center">Already have an account? <a href="/login">Login here</a></p>
            <p class="mt-3 text-center">Another day, <a href="/">Home</a></p>
          </form>
          
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      var password = document.getElementById("password"),
          confirm_password = document.getElementById("confirm_password");

      function validatePassword() {
          if (password.value !== confirm_password.value) {
              confirm_password.setCustomValidity("Passwords Don't Match");
          } else {
              confirm_password.setCustomValidity('');
          }
      }

      password.onchange = validatePassword;
      confirm_password.onkeyup = validatePassword;
  </script>

  </body>
</html>