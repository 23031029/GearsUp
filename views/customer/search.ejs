<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Search Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      .card {
        width: 100%;
        height: auto;
        margin: 0;
        cursor: pointer;
        text-decoration: none;
      }
      .card-img-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px;
      }
      .card-img-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
      }
      .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1rem; 
      }
    </style>
  </head>
  <body>
    <head><%- include('../partials/nav.ejs') %></head>

    <% if (search.length > 0) { %>
      <% for (let i=0; i<search.length; i++) { %>
        <a href="/productid/<%= search[i].productID %>" class="text-decoration-none text-dark">
          <div class="card mb-3">
            <div class="row g-0 h-100">
              <div class="col-md-6 card-img-container">
                <img src="/images/<%= search[i].image %>" class="img-fluid" alt="<%= search[i].name %>">
              </div>
              <div class="col-md-6">
                <div class="card-body">
                  <h5 class="card-title"><%= search[i].name %></h5>
                  <p class="card-text"><%=search[i].description%></p>
                  <p class="card-text"><b class="text-body-secondary">Price: </b><%=search[i].price%></p>
                </div>
              </div>
            </div>
          </div>
        </a>
      <% } %>
    <% } else { %>
      <div class="d-flex flex-column justify-content-center align-items-center vh-100">
        <p class="mt-3"><b>No product found.</b></p>
      </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>