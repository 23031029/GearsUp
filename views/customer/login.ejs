<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      .login {
        padding: 5%;
        margin-top: 10%;
        max-width: 500px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
      }

      .login label {
        font-size: 1.2rem;
      }

      .login input {
        margin-bottom: 10px;
        border-radius: 10px;
        width: 100%;
        height: 50px;
        font-size: 1.1rem;
      }

      .login button {
        width: 100%;
        height: 50px;
        font-size: 1.1rem;
        background-color: #ddd6d0;
        color: #986c4a;
        border: 0;
        font-size: x-large;
      }

      .btn-primary:hover {
        color: #ddd6d0 !important;
        background-color: #986c4a;
      }

    </style>
  </head>
  <body>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
          <% errors.forEach(function(error) { %>
              <p><%= error %></p>
          <% }); %>
      </div>
  <% } %>
  <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
          <% messages.forEach(function(message) { %>
              <p><%= message %></p>
          <% }); %>
      </div>
  <% } %>

    <div class="d-flex justify-content-center align-items-center full-height">
      <div class="login">
        <form action="/login" method="post">
          <label for="usernameORemail" class="form-label">Username/Email</label>
          <input type="text" id="usernameORemail" name="usernameORemail" class="form-control" placeholder="Enter username or email">
          
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
          
          <button type="submit" class="btn btn-primary mt-3">Login</button>
        </form>

        <p class="mt-3 text-center">Sign up with us now! <a href="/register">Sign up here</a></p>
        <p class="mt-3 text-center">Another day, <a href="/">Home</a></p>
      </div>
      
      
  
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
