<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
      }

      .profile-form {
        padding: 3%;
        margin: 5%;
        border: 1px solid #000;
        border-radius: 10%;
      }

      .alert {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
      <form class="profile-form" action="/profile" method="post" enctype="multipart/form-data">
        <h1 style="text-align: center; font-weight: bold;">Edit Profile</h1>
        <br>

        <% if (profileMessages && profileMessages.length > 0) { %>
          <div class="alert alert-danger">
              <%= profileMessages %>
          </div>
      <% } %>
      
      <% if (profileSuccessMessage && profileSuccessMessage.length > 0) { %>
          <div class="alert alert-success">
              <%= profileSuccessMessage %>
          </div>
      <% } %>
      
      

        <!-- Current Profile Picture -->
        <div class="d-flex justify-content-center align-items-center" style="height: 150px;">
          <img src="/images/<%= user.image %>" alt="Profile Image" class="rounded-circle">
          <input type="hidden" value="<%= user.image%>" name="current" >
        </div>

        <!-- Username -->
        <div class="mb-3">
          <label for="image">New Profile:</label>
          <input type="file" id="image" name="image" accept="image/*" class="form-control">
        </div>
        
        <!-- Username -->
        <div class="mb-3">
          <label for="username">Username:</label>
          <input type="text" id="username" name="username" value="<%=user.username%>" class="form-control">
        </div>

        <!-- Name -->
        <div class="mb-3">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" value="<%=user.fullName%>" class="form-control">
        </div>
        
        <!-- Email -->
        <div class="mb-3">
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" value="<%= user.email %>" class="form-control">
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
          <label for="phone">Phone:</label>
          <input type="tel" name="phone" id="phone" value="<%= user.phoneNumber %>" class="form-control">
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" class="form-control" required>
        </div>
        
        <!-- Submit Button -->
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-outline-secondary w-100 w-md-auto">Edit Profile</button>
        </div>        
      </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>