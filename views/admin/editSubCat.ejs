<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit SubCategory</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      .subcategory-form {
        padding: 3%;
        margin: 5%;
        border: 1px solid #000;
        border-radius: 10%;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
      <form class="subcategory-form" action="/editSubCategory/<%= subcategory.subCategoryID %>" method="post">
        <h1 style="text-align: center; font-weight: bold;">Edit SubCategory</h1>
        <br>
        
        <!-- SubCategory Name -->
        <div class="mb-3">
          <label for="name">SubCategory Name:</label>
          <input type="text" id="name" name="name" value="<%= subcategory.name %>" required class="form-control">
        </div>

         <!-- Category Selection -->
         <div class="mb-3">
          <label for="categoryID">Category:</label>
          <select id="categoryID" name="categoryID" class="form-control">
            <% categories.forEach(category => { %>
              <option value="<%= category.categoryID %>" <%= subcategory.categoryID === category.categoryID ? 'selected' : '' %>>
                <%= category.name %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- Description -->
        <div class="mb-3">
          <label for="Description">Description:</label>
          <textarea id="Description" name="Description" required class="form-control" rows="4"><%= subcategory.Description %></textarea>
        </div>
        

        <div class="text-center">
        <!-- Submit Button -->
        <button type="submit" class="btn btn-outline-secondary">Update SubCategory</button>
        </div>
      </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
