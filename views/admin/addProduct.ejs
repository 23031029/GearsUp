<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      .product {
        padding-left: 5%;
        padding-right: 5%;
        padding-top: 3%;
        padding-bottom: 3%;
        margin: 5%;
        border: 1px solid#000;
        border-radius: 10%;
      }

      /* Added styles for multiple select */
      .size-color-container {
        border: 1px solid #dee2e6;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
      }

      .variant-row {
        background-color: #f8f9fa;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
        <form class="product" action="/addProduct" method="post" enctype="multipart/form-data">
            <h1 style="text-align: center; font-weight: bold;">Adding Product</h1>
            <br>

            <!-- Product Image -->
            <div class="mb-3">
                <label for="image">Product Image:</label>
                <input type="file" id="image" name="image" accept="image/*" class="form-control" required>
            </div>

            <!-- Product Name -->
            <div class="mb-3">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" placeholder="Enter product name" required class="form-control">
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description">Description:</label>
                <textarea id="description" name="description" placeholder="type the description..." required class="form-control" rows="4"></textarea>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label for="price">Product Price:</label>
                <input type="number" id="price" name="price" placeholder="Enter product price" required class="form-control" min="0" step="0.01">
            </div>

            <!-- Discount -->
            <div class="mb-3">
                <label for="discount">Product Discount (%):</label>
                <input type="number" id="discount" name="discount" value="0" class="form-control" min="0" step="1">
            </div>

            <!-- Brand -->
            <div class="mb-3">
                <label for="brand">Brand:</label>
                <select id="brand" name="brand" class="form-select" required>
                    <% for (let i = 0; i < brand.length; i++) { %>
                        <option value="<%= brand[i].brandID %>">
                            <%= brand[i].brandName %>
                        </option>
                    <% } %>
                </select>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label for="category">Category:</label>
                <select id="category" name="category" class="form-select" required>
                    <% for (let i = 0; i < category.length; i++) { %>
                        <option value="<%= category[i].categoryID %>">
                            <%= category[i].name %>
                        </option>
                    <% } %>
                </select>
            </div>

            <!-- Subcategory -->
            <div class="mb-3">
                <label for="subcategory">Subcategory:</label>
                <select id="subcategory" name="subcategory" class="form-select" required>
                    <% for (let i = 0; i < subcategory.length; i++) { %>
                        <option value="<%= subcategory[i].subCategoryID %>">
                            <%= subcategory[i].name %>
                        </option>
                    <% } %>
                </select>
            </div>
        
            <button type="submit" class="btn btn-outline-secondary">Add Product</button>
        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>