<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      main {
        padding: 5%;
        padding-left: 10%;
        padding-right: 10%;
      }

      table {
        border: 2px solid #986c4a;
        border-radius: 8px;
        overflow: hidden;
      }

      table th {
        background-color: #986c4a !important;
        color: #dcc9bb !important;
      }

      table td {
        background-color: #dcc9bb !important;
        color: #986c4a !important;
      }

      .addAdmin{
        color: #5c4838;
      }

      .addAdmin:hover{
        color: #ab9786;
      }

    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
      <h3>
        <a href="/addAdmin" class="addAdmin">Add Admin</a>
      </h3>
      <table class="table text-center">
        <thead>
          <tr>
            <th scope="col">User ID</th>
            <th scope="col">Profile Picture</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Role</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < userList.length; i++) { %>
          <tr class="users">
            <td><%= userList[i].UserID %></td>
            <td>
              <img src="images/<%= userList[i].image %>" width="50" height="50" alt="<%= userList[i].username %>">
            </td>
            <td><%= userList[i].username %></td>
            <td><%= userList[i].email %></td>
            <td><%= userList[i].phoneNumber %></td>
            <td><%= userList[i].role %></td>
            <td>
              <a  href="/deleteUser/<%= userList[i].username %>" onclick="return confirm('Are you sure you want to delete <%=userList[i].username%>?')">
                <button type="button" class="btn btn-outline-danger">Delete User</button>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
