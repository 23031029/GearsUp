<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Brand</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      .brand {
        padding: 3%;
        margin: 5%;
        border: 1px solid #000;
        border-radius: 10%;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
        <form class="brand" action="/editBrand/<%= brand.brandID %>" enctype="multipart/form-data" method="post">
            <h1 style="text-align: center; font-weight: bold;">Editing Brand</h1>
            <br>

            <!-- Existing Brand Image -->
              <div class="mb-3">
                <div class="mb-3 text-center">
                <input type="hidden" name="currentImage" value="<%= brand.brandImage %>">
                <img src="/images/<%= brand.brandImage %>" width="30%" alt="Brand Image" />
              </div>
              </div>
                  
            <!-- Category Image Upload -->
              <div class="mb-3">
                <label for="image">Brand Image:</label>
                <input type="file" id="image" name="image" accept="image/*" class="form-control">
              </div> 
        
            <!-- Brand Name -->
            <div class="mb-3">
                <label for="name">Brand Name:</label>
                <input type="text" id="name" name="name" value="<%= brand.brandName %>" required class="form-control">
            </div>
        
            <!-- Brand -->
            <div class="mb-3">
                <label for="description">Description:</label>
                <textarea id="description" name="description" required class="form-control" rows="4"><%= brand.description %></textarea>
            </div>

        
            <!-- Submit Button -->
            <div class="text-center">
            <button type="submit" class="btn btn-outline-secondary">Update Brand</button>
            </div>
        </form>
        
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
