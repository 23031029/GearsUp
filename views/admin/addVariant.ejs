<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Variant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      .product{
        padding-left: 5%;
        padding-right: 5%;
        padding-top: 3%;
        padding-bottom: 3%;
        margin: 5%;
        border: 1px solid#000;
        border-radius: 10%;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
        <form class="product" action="/addVariant" method="post" >
            <div class="mb-3 text-center">
            <h1>Adding Variant</h1>
        </div>
            <br>

            <!-- Product Name -->
            <div class="mb-3">
                <label for="product">Product Name:</label>
                <select name="product" id="product" class="form-control">
                    <% for (let p = 0; p < product.length; p++) { %>
                        <option value="<%= product[p].productID %>"><%= product[p].name %></option>
                    <% } %>
                </select>
            </div>

            <!-- Size -->
            <div class="mb-3">
                <label for="size">Product Size:</label>
                <select name="size" id="size" class="form-control">
                    <option value="" selected>Not Applible</option>
                    <% for (let s = 0; s < size.length; s++) { %>
                        <option value="<%= size[s].sizeID %>"><%= size[s].size %></option>
                    <% } %>

                </select>
            </div>

            <!-- Color -->
            <div class="mb-3">
                <label for="color">Product Color:</label>
                <select name="color" id="color" class="form-control">
                    <option value="" selected>Not Applible</option>
                    <% for (let c = 0; c < color.length; c++) { %>
                        <option value="<%= color[c].colorID %>"><%= color[c].colorName %></option>
                    <% } %>
                </select>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
                <label for="quantity">Product Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="1" value="1" required class="form-control">
            </div>

            <button type="submit" class="btn btn-outline-secondary">Add Variant</button>
        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
