<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Sub Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #f8f7f6;
      }

      main {
        padding: 5%;
        padding-left: 10%;
        padding-right: 10%;
      }

      table {
        border: 2px solid #986c4a;
        border-radius: 8px;
        overflow: hidden;
      }

      table th {
        background-color: #986c4a !important;
        color: #dcc9bb !important;
      }

      table td {
        background-color: #dcc9bb !important;
        color: #986c4a !important;
      }

      .addCategory {
        color: #5c4838;
      }

      .addCategory:hover {
        color: #ab9786;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/nav.ejs') %>
    </header>

    <main>
      <h3>
        <a href="/addSubCategory" class="addCategory">Add Sub-Category</a>
      </h3>
      <table class="table text-center">
        <thead>
          <tr>
            <th scope="col">SubCategory ID</th>
            <th scope="col">SubCategory Name</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < subcategories.length; i++) { %>
            <tr class="users">
              <td><%= subcategories[i].subCategoryID %></td>
              <td><%= subcategories[i].name %></td>
              <td><%= subcategories[i].categoryName %></td>
              <td><%= subcategories[i].Description %></td>
              
              <td>
                <a href="/editSubCategory/<%= subcategories[i].subCategoryID %>">
                  <button type="button" class="btn btn-outline-secondary">Edit SubCategory</button>
                </a>
              </td>
              <td>
                <a href="/deleteSubCategory/<%= subcategories[i].subCategoryID %>" onclick="return confirm('Are you sure you want to delete <%= subcategories[i].name %>?')">
                  <button type="button" class="btn btn-outline-danger">Delete SubCategory</button>
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
