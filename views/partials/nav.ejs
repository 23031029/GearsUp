<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap Navbar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    body {
      margin-bottom: 3%;
      background-color: #f8f7f6;
    }

    .navbar-nav .nav-link {
      color: #525252 !important;
      margin-right: 20px;
      font-size: larger;
      font-weight: lighter;
    }

    .navbar-nav .nav-link:hover {
      color: #986c4a !important;
    }

    .btn-outline-success {
      border: 2px solid #986c4a;
      color: #986c4a;
    }

    .btn-outline-success:hover {
      color: white !important;
      background-color: #986c4a !important;
    }

    .navbar-brand img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 50%;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg sticky-top bg-body-tertiary">
    <div class="container-fluid">
      <!-- Navbar Brand -->
      <a href="/" class="navbar-brand">
        <img src="/images/<%= company[0].companyLogo %>" alt="Logo">
      </a>

      <!-- Navbar Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible Navbar Content -->
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav me-auto">
          <% if (user) { %>
            <li class="nav-item">
              <div class="d-flex align-items-center">
                <img src="/images/<%= user.image %>" alt="Profile Image" width="50" height="50" class="rounded-circle me-2">
                <a href="/profile" class="nav-link"><%=user.username%></a>
              </div>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% } %>

          <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Dashboard</a>
            </li>
          <% } %>

          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/category">Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          <% } %>
        </ul>

        <% if (user) { %>
          <a class="nav-link" href="/history">Order History</a>
      <% } %>
      

        <!-- Search Form -->
        <form class="d-flex ms-lg-3" role="search" action="/search">
          <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>

        
      </div>
    </div>
  </nav>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
